<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoActivity" android:layout_marginBottom="16dp" android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" android:layout_marginTop="8dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/scale" android:id="@+id/scaleIV"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:contentDescription="@string/bmi_info_scale_description"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bmiDescriptionET"
            android:text="@string/bmi_lorem_ipsum"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black" android:layout_toStartOf="@+id/scaleIV"
            android:layout_marginEnd="0dp" android:textAlignment="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bmiValueET"
            android:text="@string/bmi_info_bmi_value"
            android:textColor="@android:color/black" android:textSize="24sp"
            android:layout_below="@id/scaleIV"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:layout_marginTop="16dp"
            android:layout_marginStart="0dp" android:layout_alignStart="@+id/scaleIV" android:textAlignment="center"
            android:textStyle="bold"/>
</RelativeLayout>